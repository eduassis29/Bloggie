@model Bloggie.Web.Models.ViewModels.EditTagRequest

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit tags - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">

    @if (Model != null) {
        <form method="post">
            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" readonly asp-for="Id" />
            </div>

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" id="name" class="form-control" asp-for="NameTag" />
            </div>

            <div class="mb-3">
                <label class="form-label">Display</label>
                <input type="text" id="display" class="form-control" asp-for="DisplayNameTag" />
            </div>

            <div class="mb-3 d-flex pt-3">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <button type="submit" class="btn btn-danger ms-3" asp-area="" asp-controller="AdminTags" asp-action="Delete">Delete</button>
            </div>
        </form>
    }
    else {
        <p>Tag not Found</p>
    }

</div>
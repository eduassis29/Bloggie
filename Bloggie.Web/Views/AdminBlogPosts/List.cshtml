@model List<Bloggie.Web.Models.Domain.BlogPost>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show all Tags - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if(Model != null && Model.Any()) {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Heading</th>
                    <th>PageTitle</th>
                    <th>URL Handle</th>
                    <th>Publish Date</th>
                    <th>Author</th>
                    <th>Visible</th>
                    <th>Tags</th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var blogs in Model) {
                    <tr>
                        <td>@blogs.Id</td>
                        <td>@blogs.HeadingBlo</td>
                        <td>@blogs.PageTitleBlo</td>
                        <td>@blogs.UrlHandleBlo</td>
                        <td>@blogs.PublishedDateBlo</td>
                        <td>@blogs.AuthorBlo</td>
                        <td>@blogs.VisibleBlo</td>
                        <td>
                            <div class="d-flex">
                                @foreach(var tag in blogs.TagsBlo) {
                                    <span class="badge bg-secondary me-1">@tag.NameTag</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a class="btn btn-dark" asp-area="" asp-controller="AdminBlogPosts" asp-action="Edit" asp-route-id="@blogs.Id">Edit</a>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    }
    else {
        <p>No Blog Post Found</p>
    }
    <div>
        <a class="btn btn-dark mb-3" asp-controller="AdminBlogPosts" asp-action="Add">Add Blog Post</a>
    </div>
</div>